extends layout

block content
  //navbar section
  nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
    div.container
      a.navbar-brand(href="#" style={color:'blue'}) eValley
      button.navbar-toggler(
        type="button" data-toggle="collapse"
        data-target="#navbarSupportedContent" 
        aria-controls="navbarSupportedContent"
        aria-expand="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
      div.collapse.navbar-collapse#navbarSupportedContent
        ul.navbar-nav.ml-auto
          li.nav-item.active
            a.nav-link(href="#") Home
          li.nav-item
            a.nav-link(href="#contact") Contact
          li.nav-item
            a.nav-link(href="#service") Service
          li.nav-item
            button(type=button id="landing-page-sign-in" class="btn btn-primary" data-toggle="modal" data-target="#signInModal") Sign In
  
  //login modal section
  div(class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledby="signInModalLablel" aria-hidden="true")
    div(class="modal-dialog" role="document")
      div.modal-content
        div.modal-header
          h5.modal-title#signInModalLabel Sign In
          button(type="button" class="class" id="login-modal-close-btn" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
        div.modal-body
          form
            div.form-group
              label(for="username" class="col-form-label") User Name
              input(type="email" name="username" id="login-modal-input-name" 
                placeholder="your email" style="width:100%")
            div.form-group
              label(for="password" class="col-for-label") Password
              input(type="text" name="password" id="login-modal-input-password" 
                placeholder="" style="width:100%")
          
        div.modal-footer(style="justify-content:space-between")
            a#login(href="#") Sign In
            a#forget-password(href="#") Forget Username/Password?
            a#register(href="/register") Register a new account
  
  //hero jumbotron section
  header.jumbotron.jumbotron-fluid
    div.container-fluid.text-center
      h1.display-3 The Best Solution for Your Business
      p.lead.pb-4 We help you maximaze performance and build a healthy organization
      p
        a(href="#" class="btn btn-primary btn-lg" role="button") Learn More

  //service description section
  section#services.container
    h2.display-4.text-center.mt-5.mb-3 Our Services
    
    div.row.text-center
      div.col-md-4.mn-4
        div.card.h-100
          img.card-img-top(src="/images/col1.jpeg" alt="Design")
          div.card-body
            h4.card-title Design
            p.card-text Deiver the best user experience with our carefully designed responsive websites and application
            div.card-footer.py-4
              a(href="#").btn.btn-secondary See portfolio &raquo;
      div.col-md-4.mn-4
        div.card.h-100
          img.card-img-top(src="/images/col2.jpeg" alt="Development")
          div.card-body
            h4.card-title Development
            p.card-text You need software that works on every device. Leverage the latest technologies and the most powerful tools!
            div.card-footer.py-4
              a(href="#").btn.btn-secondary See projects &raquo;
      div.col-md-4.mn-4
        div.card.h-100
          img.card-img-top(src="/images/col3.jpeg" alt="Analytics")
          div.card-body
            h4.card-title Analytics
            p.card-text Consult our experts to set up proper goals and find the best stack for your next application!
            div.card-footer.py-4
              a(href="#").btn.btn-secondary See testimonials &raquo;
  section#contact.container-fluid.text-center.py-4.mt-4
    h2.display.pb-4.my-4 Get in touch with us today!
    p.lead.pb-3 Send us a message and we will get back to you as soon as possible.
    a(href="#" role="button").btn.btn-primary.btn-lg.mb-4 Contact us
    
  //footer section
  footer.py-3.bg-light
    div.container
      p.text-center Copyright &copy; Hello Consultancy 2019
      
